{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@controller/*": ["src/controller/*"],
      "@db/*": ["src/db/*"],
      "@utility/*": ["src/utility/*"],
      "@router/*": ["src/router/*"]
    }
  }
}
